@using FlipShop.Core.Contract.Administration
@model Account


<div class="container mt-5">

    <div class="row">
        <div class="col-md-11 mt-60 mx-md-auto">
            <div class="login-box bg-white pl-lg-5 pl-0">
                <div class="row no-gutters align-items-center">
                    <div class="col-md-6">
                        <div class="form-wrap bg-white">
                            <h4 class="btm-sep pb-3 mb-5  text-center">Login to <span class="fw-bold text-warning">Flip Shop</span> </h4>
                            <form class="form" method="post" asp-area="" asp-action="" asp-controller="SignIn" asp-route-returnUrl="@Model.ReturnUrl">
                                <div class="row">
                                    <div class="col-12">
                                        @Html.AntiForgeryToken()
                                        <div class="form-group position-relative">

                                            <input type="text" asp-for="UserName" id="username" class="form-control" placeholder="Username">
                                            <span asp-validation-for="UserName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group position-relative">

                                            <input type="password" asp-for="Password" id="password" class="form-control" placeholder="Password">
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="row">
                                            <div class="form-group col-6">
                                                <div class="form-check">
                                                    <label asp-for="RememberMe">
                                                        <input type="checkbox" asp-for="RememberMe" />
                                                        @Html.DisplayNameFor(control=>control.RememberMe)
                                                    </label>
                                                </div>
                                            </div>
                                            <div class="col-6 text-lg-right">
                                                <a asp-action="ForgotPassword" asp-controller="account" class="c-black">Forgot password ?</a>
                                            </div>
                                        </div>


                                    </div>
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                    <div class="col-12 mt-30">
                                        <button type="submit" id="submit" class="btn btn-lg btn-custom btn-dark btn-block">
                                            Sign In
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="content text-center">
                            <div class="border-bottom pb-5 mb-5">
                                <h3 class="c-black">First time here?</h3>
                                <a asp-controller="signup" asp-action="" class="btn btn-warning">Sign up</a>
                            </div>
                            <h5 class="c-black mb-4 mt-n1">Or Sign In With</h5>
                            <div class="socials">
                                @if (Model.ExternalLogins.Any())
                                {
                                        <form method="post" asp-action="" asp-controller="ExternalLogin" asp-area="" asp-route-returnUrl="@Model.ReturnUrl">

                                        @foreach (var provider in Model.ExternalLogins)
                                        {
                                                    <button type="submit" class="border-0 bg-white" name="provider" value="@provider.Name" title="Login using your @provider.DisplayName account">
                                                        <a class="zmdi zmdi-google text-white"></a>
                                                    </button>
                                                    <a href="#" class="zmdi zmdi-facebook"></a>
                                                    <a href="#" class="zmdi zmdi-twitter"></a>

                                                    <a href="#" class="zmdi zmdi-instagram"></a>
                                        }
                                        </form>
                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
        <environment include="Staging, Production,Development">
            <script src="https://code.jquery.com/jquery-3.6.1.min.js"
            integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ="
