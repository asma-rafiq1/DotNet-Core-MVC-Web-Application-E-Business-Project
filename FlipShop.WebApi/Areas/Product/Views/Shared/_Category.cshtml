@model IEnumerable<FlipShop.Core.Entities.Category>

<h4>By category:</h4>

@if (Model.Any())
{
    foreach (var category in Model)
    {
        <div>
            <a data-ajax="true"
       data-ajax-mode="replace"
       data-ajax-update="#productsList"
       asp-action=""
       asp-controller="GetCategoryFilteredProducts"
       asp-area=""
       class="fw-bold"
       asp-route-categoryId="@category.Category_ID">@category.Category_Title</a>
        </div>
    }
}

