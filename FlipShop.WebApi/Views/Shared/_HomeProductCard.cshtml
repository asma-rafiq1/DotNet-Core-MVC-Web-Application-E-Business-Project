@model IEnumerable<Product>

@if (Model.Any())
{

    foreach (var item in Model)
    {
        <div class="col-lg-6">
            <a asp-action="Details" asp-controller="Product" asp-area="" asp-route-id="@item.Product_ID" class="m-5">
                <div class="card" style="border-radius: 15px; width:330px; height:420px;">
                    <div class="bg-image hover-overlay ripple ripple-surface ripple-surface-light mx-auto"
                 data-mdb-ripple-color="light" style="height:250px;">
                        <img src="@Url.Content(item.Product_ImagePath)"
                     style="border-top-left-radius: 15px; border-top-right-radius: 15px;" class="img-fluid p-4"
                     alt="Laptop" width="200" height="250" />
                    </div>
                    <div class="card-body pb-0">
                        <div class="d-flex justify-content-between">
                            <div>
                                <p class="text-dark fw-bold">@item.Product_Name</p>
                                <p class="small text-muted fw-bold">OMR @item.Product_Price</p>
                            </div>
                            <div>
                                <div class="d-flex flex-row justify-content-end mt-1 mb-4 text-danger">
                                    <i class="bi bi-star"></i>
                                    <i class="bi bi-star"></i>
                                    <i class="bi bi-star"></i>
                                    <i class="bi bi-star"></i>
                                </div>
                                <p class="small text-muted">Rated 4.0/5</p>
                            </div>
                        </div>
                    </div>
                    <hr class="my-0" />

                    <hr class="my-0" />
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center pb-2 mb-1">

                            <input type="button" class="btn btn-dark" value="Buy Now" />
                        </div>
                    </div>
                </div>
            </a>
        </div>

    }

}
else
{

    <div class="col">
        <h6 class="text-center" style="font-size:30px;">No Products Found</h6>
    </div>


}





